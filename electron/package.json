{
    "name": "unweave",
    "version": "1.0.0",
    "description": "Unweave â€” AI Audio Stem Separator",
    "main": "main.js",
    "private": true,
    "scripts": {
        "start": "electron .",
        "dev": "cross-env NODE_ENV=development electron .",
        "build:frontend": "cd ../frontend && npm run build",
        "pack": "electron-builder --dir",
        "dist:win": "electron-builder --win",
        "dist:mac": "electron-builder --mac",
        "dist:linux": "electron-builder --linux"
    },
    "build": {
        "appId": "com.unweave.app",
        "productName": "Unweave",
        "directories": {
            "output": "../dist-electron"
        },
        "files": [
            "**/*",
            "!node_modules/**/*"
        ],
        "extraResources": [
            {
                "from": "../backend",
                "to": "backend",
                "filter": [
                    "**/*",
                    "!.venv/**",
                    "!__pycache__/**",
                    "!output/**",
                    "!uploads/**",
                    "!*.wav",
                    "!*.mp3"
                ]
            },
            {
                "from": "../frontend/dist",
                "to": "frontend-dist"
            },
            {
                "from": "resources/python",
                "to": "python",
                "filter": [
                    "**/*",
                    "!__pycache__/**",
                    "!*.pyc"
                ]
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "assets/icon.icns",
            "category": "public.app-category.music"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "assets/icon.png",
            "category": "Audio"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "dependencies": {
        "electron-is-dev": "^2.0.0"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "electron": "^34.2.0",
        "electron-builder": "^25.1.8"
    }
}